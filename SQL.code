CREATE VIEW ProductSalesSummary AS
SELECT 
    ProductName,
    SUM(Quantity) AS TotalQuantitySold,
    SUM(Quantity * Price) AS TotalRevenue
FROM Sales
GROUP BY ProductName;

SELECT * FROM ProductSalesSummary;

